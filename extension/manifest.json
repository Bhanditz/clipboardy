{
  "name": "Clipboardy",
  "homepage_url": "http://rainsoft.io",
  "version": "0.1.0",
  "description": "Copy to clipboard source code from stackoverflow.com, github.com and more",
  "author": "Dmitri Pavlutin",
  "icons": {
    "16": "icons/default16.png",
    "128": "icons/default128.png"
  },
  "content_scripts": [{
    "matches": [
      "http://*.stackoverflow.com/*",
      "http://*.askubuntu.com/*"
    ],
    "js": [
      "compile/js/vendors_content_script.js",
      "compile/js/stackoverflow.js"
    ],
    "css": [
      "compile/css/stackoverflow.css"
    ],
    "run_at": "document_idle"
  }, {
    "matches": [
      "https://*.github.com/*"
    ],
    "js": [
      "compile/js/vendors_content_script.js",
      "compile/js/github.js"
    ],
    "css": [
      "compile/css/github.css"
    ],
    "run_at": "document_idle"
  }, {
    "matches": [
      "https://www.npmjs.com/*"
    ],
    "js": [
      "compile/js/vendors_content_script.js",
      "compile/js/npmjs.js"
    ],
    "css": [
      "compile/css/github.css"
    ],
    "run_at": "document_idle"
  }],
  "background": {
    "scripts": [
      "compile/js/vendors_content_script.js",
      "compile/js/background.js"
    ]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/default19.png",
      "38": "icons/default38.png"
    },
    "default_title": "Clipboard history",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://stackoverflow.com/*",
    "clipboardWrite",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "web_accessible_resources": [
    "icons/*",
    "buttons.html"
  ]
}
